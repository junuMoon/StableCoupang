generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  password        String
  name            String?
  xrpAddress      String   @unique
  xrpSeed         String
  reputationScore Float    @default(0) // 평균 리뷰 점수
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  reviews         Review[]
  rewardHistory   RewardHistory[]

  @@map("users")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  price       Int?     // 원 단위
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reviews     Review[]

  @@map("products")
}

model Review {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  text        String
  images      String[] // 이미지 파일 경로 배열
  aiScore     Int      @default(0) // AI 평가 점수 (0-100)
  rewardAmount Int     @default(0) // 지급된 리워드 (KRW)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model RewardHistory {
  id          String   @id @default(cuid())
  userId      String
  reviewId    String?  // 리뷰 관련 리워드인 경우
  amount      Int      // 지급 금액 (KRW)
  type        String   @default("review") // review, bonus 등
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reward_history")
}
